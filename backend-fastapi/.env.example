# Base de Datos (SQLite - archivo local)
# Ya no necesita PostgreSQL ni Redis
DATABASE_PATH=/var/fotolibros/fotolibros.db

# Clawdbot
CLAWDBOT_URL=http://127.0.0.1:18789
CLAWDBOT_HOOK_TOKEN=tu_token_secreto_aqui

# OpenRouter (para AGNO)
OPENROUTER_API_KEY=sk-or-v1-xxxxx
AGNO_MODEL=openai/gpt-4o-mini

# Telegram
TELEGRAM_ADMIN_CHAT=@tu_usuario

# FDF Credenciales
FDF_USER=tu_usuario_fdf
FDF_PASS=tu_password_fdf

# Storage
PHOTOS_BASE_DIR=/var/fotolibros/pedidos

# CORS (frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://tu-dominio.com"]

# Worker
WORKER_MAX_RETRIES=3
WORKER_TIMEOUT_MINUTES=45
